      SourceFiles="$(TargetPath)"
      DestinationFolder="$(ModFolder)"
      SkipUnchangedFiles="true"
    />
    
    <Message Text="Copied $(TargetFileName) to $(BuildOutputFolder)" Importance="high" />
  </Target> -->
</Project>